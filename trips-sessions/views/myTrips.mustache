<html>
<body>

    <h1>Trips</h1>
    <h3>Your Favorite Trip Planner</h3>

    {{> main-menu}}

    <h3>Your Trips</h3>

    {{#newTrips}}

        <form action='/delete-trip' method='POST'>

            <input type='hidden' name='tripName' value='{{tripName}}'/>
            <h3>Trip Name: {{tripName}}</h3>
            <img src={{imageURL}}>
            <h3>Location: {{destination}}</h3>
            <h3>Departure Date: {{departureDate}}</h3>
            <h3>Return Date: {{returnDate}}</h3><br/>
            <button>Delete Trip</button>

        </form>

        <form action='/logout' method='GET'>

            <button>Logout</button>
            
        </form>

    {{/newTrips}}

</body>
</html>